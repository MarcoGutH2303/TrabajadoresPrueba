
@{
    ViewData["Title"] = "Bandeja";
}

<h3 class="text-center pb-2">Bandeja De Trabajadores</h3>

<div class="shadow">
    <div class="form-group row px-3 pt-3">
        <div class="col-md-1">
            <label class="align-middle">Sexo</label>
        </div>
        <div class="col-md-3">
            <select class="form-control o" id="cboFiltroSexo" onchange="FiltroSexo()">
                <option value="" selected="selected">-- Seleccione --</option>
                <option value="M">Masculino</option>
                <option value="F">Femenino</option>
            </select>
        </div>
    </div>
    <div class="row p-3 ">
        <div id="divBandeja" class="table-responsive-md">
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/generic.js"></script>
    <script src="~/js/Bandeja.js"></script>
}